<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <div class="panel panel-default devise-panel">
        <div class="panel-body">
          <h3 class="text-center">Please sign in</h3>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <small><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></small>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-block" %>
          </div>
          <p class="login-secondary-action">
            <small>
              Don't have an account? <%= link_to "Sign up here!", new_user_registration_path() %>
            </small>
          </p>
          <p class="login-separator">
            <span>or</span>
          </p>
          <% end %>
          <%= link_to omniauth_authorize_path(resource_name, "github"), class:"btn btn-default btn-block" do %>
            <i class="fa fa-github"></i> Sign up with Github
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

